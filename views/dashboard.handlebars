<section class="row">
  <div class="column">
    <h2>Create New Movie</h2>

    <form class="new-movie-form">
      <div>
        <label for="movie-title">Title:</label>
        <input id="movie-title" name="movie-title" />
      </div>
      <div>
        <label for="genre-name">Genre:</label>
        <input id="genre-name" name="genre-name"></input>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
  <div class="column">
    <h2>About Me</h2>
    {{> user-info}}
  </div>
</section>

{{#if movies.length}}
<section>
  <h2>Your Movies</h2>
  <ol>
    {{#each movies as |movie|}}
    <li>
      {{> movie-info movie}}
      <a href="/dashboard/edit/{{movies.id}}" class="edit-link">Edit Movie</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-movie.js"></script>
