<section class="row">
  <div class = "column">
    <h2>Create New Movie</h2>

    <form class="new-movie-form">
      <div>
        <label for="movie-title">Title:</label>
        <input type="text" id="movie-title" name="movie-title" />
      </div>
      <div>
        <label for="movie-genre">Genre:</label>
        <textarea id="genre-text" name="genre-text"></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
  <div class = "column">
    <h2>About Me</h2>
    {{> user-info}}
  </div>
</section>

{{#if movies.length}}
<section>
  <h2>Your Movies</h2>
  <ol>
    {{#each movies as |movie|}}
    <li>
      {{> movie-info movies}}
      <a href="/dashboard/edit/{{movie.id}}" class="edit-link"> &nbsp; &nbsp; &nbsp; Edit Movie</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-movie.js"></script> 
